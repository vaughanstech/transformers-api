// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Autobots {
  name                  String @unique
  role                  String
  transforms_into       String
  description           String
  first_appearance_date Int
  first_appearance      String
}

model Decepticons {
  name                  String @unique
  role                  String
  transforms_into       String
  description           String
  first_appearance_date Int
  first_appearance      String
}

model Dinobots {
  name                  String @unique
  transform_into        String
  description           String
  Autobot_or_Decepticon String
}

model Movies {
  name         String @unique
  director     String
  description  String
  release_date String
}

model Games {
  name         String   @unique
  description  String
  release_date String
  developers   String
  platforms    String[]
}
